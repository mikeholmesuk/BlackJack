<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Player Hand</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="well">
                    <ul class="list-unstyled">
                        <% game.player.hand.forEach(function(card) { %>
                            <li><%= card.suit %><%= card.name %></li>
                        <% }); %>
                    </ul>
                </div>
            </div>
            <div class="col-md-6">
                <h5>Score: <span id="player_score"><%= game.player.score %></span></h5>
                <div class="btn-group" role="group" aria-label="...">
                    <button type="button" class="btn btn-info">Hit me!</button>
                    <button type="button" class="btn btn-warning">Stick!</button>
                </div>
            </div>
        </div>
    </div>
</div>
