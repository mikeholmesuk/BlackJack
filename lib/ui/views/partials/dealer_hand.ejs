<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Dealer Hand</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6">
                <div class="well">
                    <ul class="list-unstyled">
                        <% game.dealer.hand.forEach(function(card) { %>
                            <li><%= card.suit %><%= card.name %></li>
                        <% }); %>
                    <ul>
                </div>
            </div>
            <div class="col-md-6">
                <h5>Score: <span id="dealer_score"><%= game.dealer.score %></span></h5>
            </div>
        </div>
    </div>
</div>
